<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
           http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <!-- A continuacion deben declararse todas las Interfaces que se implementan como
         Servlets en el sistema. Para cada Interfaz deben declararse los tags
         <servlet> y <servlet-mapping>
     -->

    <servlet>
      <servlet-name>InicioSesion</servlet-name>
      <servlet-class>interfaces.InterfazInicioSesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InicioSesion</servlet-name>
        <url-pattern>/InicioSesion</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>mostrarMaes</servlet-name>
      <servlet-class>interfaces.InterfazMostrarMaes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mostrarMaes</servlet-name>
        <url-pattern>/mostrarMaes</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>mostrarAsistencia</servlet-name>
      <servlet-class>interfaces.InterfazMostrarAsistencia</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mostrarAsistencia</servlet-name>
        <url-pattern>/mostrarAsistencia</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>registrarUbicacion</servlet-name>
      <servlet-class>interfaces.InterfazRegistrarUbicacion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrarUbicacion</servlet-name>
        <url-pattern>/registrarUbicacion</url-pattern>
    </servlet-mapping>

